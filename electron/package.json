{
  "name": "facsys-inventory",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm:start-backend\" \"npm:start-frontend\" \"npm:start-electron\"",
    "start-electron": "electron .",
    "start-frontend": "npm --prefix ../frontend run dev",
    "start-backend": "node ../backend/server.js",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.facsys.inventory",
    "productName": "FACSYS Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "../frontend/out/**/*",
      "../backend/**/*",
      "../facsys.db"
    ],
    "extraResources": [
      {
        "from": "../facsys.db",
        "to": "facsys.db"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
